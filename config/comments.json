{
    "version": 1,
    "request": {
        "url": "https://api.stackexchange.com/2.3/comments",
        "method": "GET",
        "params": {
            "site": true,
            "key": false ,          
            "order":false,
            "sort":false
        },
        "pagination": {
            "type": "page",
            "pageKey": "page",
            "limitKey": "pagesize",
            "maxCount": 50
        },
        "authorization": {
            "type": "QueryParam",
            "keyParam": "access_token"
            
        }
    },
    
    "response": {
        "ctype": "application/json",
        "tablePath": "$.items[*]",
        "schema": {
            "post_id": {
                "target": "$.post_id",
                "type": "int"
            },
            "score": {
                "target": "$.score",
                "type": "int"
            },
            "comment_id": {
                "target": "$.comment_id",
                "type": "int"
            },
            "creation_date": {
                "target": "$.creation_date",
                "type": "int"
            }
        },
        "orient": "records"
    }
}
